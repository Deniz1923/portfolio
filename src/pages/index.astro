---
import MainLayout from '../layouts/Layout.astro';
import '../styles/global.css';
---

<MainLayout title="My Portfolio">
  <div class="max-w-4xl mx-auto p-10">
    <header class="text-center py-20">
      <h1 class="text-5xl font-bold mb-4 text-blue-400">
        Hello, I'm Deniz
      </h1>
      <p class="text-xl text-gray-300 mb-8">
        Developer | Designer | Creator
      </p>
      <a href="../src/assets/ÖzgürDenizGençCV.pdf" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg font-bold transition">
        Download CV
      </a>
    </header>

    <section>
      <h2 class="text-3xl font-bold mb-6 border-b border-gray-700 pb-2">Projects</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-gray-800 p-6 rounded-xl hover:shadow-xl transition border border-gray-700">
          <h3 class="text-xl font-bold mb-2">Project One</h3>
          <p class="text-gray-400 mb-4">A cool app built with Astro and Tailwind.</p>
          <span class="text-blue-400 text-sm">View Code &rarr;</span>
        </div>
         <div class="bg-gray-800 p-6 rounded-xl hover:shadow-xl transition border border-gray-700">
          <h3 class="text-xl font-bold mb-2">Project Two</h3>
          <p class="text-gray-400 mb-4">Another amazing project description.</p>
          <span class="text-blue-400 text-sm">View Code &rarr;</span>
        </div>
      </div>
    </section>
  </div>
</MainLayout>